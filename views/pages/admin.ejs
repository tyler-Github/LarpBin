<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
    <%- include('../partials/header') %>

    <style>
        /* Dark Mode Styling */
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1, h2 {
            color: #ffffff;
        }

        /* Search Bar */
        .search-bar {
            width: 100%;
            max-width: 400px;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #333;
            background: #222;
            color: #fff;
            border-radius: 5px;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            background: #1e1e1e;
            border-radius: 8px;
            overflow: hidden;
            margin-bottom: 30px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #333;
        }

        th {
            background: #333;
            color: #fff;
        }

        tr:hover {
            background: #292929;
        }

        /* Buttons */
        button {
            background: #ff5252;
            color: white;
            border: none;
            padding: 8px 14px;
            border-radius: 4px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #ff3333;
        }

        .secondary-btn {
            background: #444;
        }

        .secondary-btn:hover {
            background: #666;
        }

        /* Loading Message */
        #loadingMessage {
            text-align: center;
            margin-top: 10px;
            color: #ff5252;
        }

        /* Database Management Section */
        .database-section {
            margin-top: 30px;
            padding: 20px;
            background: #1a1a1a;
            border-radius: 8px;
        }

        .database-section input {
            padding: 10px;
            border: 1px solid #444;
            background: #222;
            color: #fff;
            border-radius: 5px;
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <h1>Admin Panel</h1>
    <p>Welcome, <%= username %></p>

    <!-- Pastes Section -->
    <h2>Pastes</h2>
    <input type="text" id="pasteSearch" class="search-bar" placeholder="Search pastes..." oninput="searchPastes()">
    
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Title</th>
                <th>Content</th>
                <th>Created At</th>
                <th>Pinned</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="pasteTable"></tbody>
    </table>

    <p id="loadingMessage" style="display: none;">Loading more pastes...</p>

    <!-- Users Section -->
    <h2>Users</h2>
    <input type="text" id="userSearch" class="search-bar" placeholder="Search users..." oninput="searchUsers()">

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="userTable"></tbody>
    </table>

    <!-- Comments Section -->
    <h2>Comments</h2>
    <input type="text" id="commentSearch" class="search-bar" placeholder="Search comments..." oninput="searchComments()">

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="commentTable"></tbody>
    </table>

    <!-- Database Management -->
    <div class="database-section">
        <h2>Database Management</h2>
        <a href="/admin/download-db" download>
            <button class="secondary-btn">Download Database</button>
        </a>

        <form id="uploadForm" enctype="multipart/form-data" style="margin-top: 10px;">
            <input type="file" name="database" id="databaseFile" required>
            <button type="submit">Upload Database</button>
        </form>
    </div>

    <br>
    <a href="/" style="color: #ff5252;">Back to Home</a>

    <script>
        let offset = 0;
        let loading = false;

        document.addEventListener("DOMContentLoaded", () => {
            loadPastes();
            loadUsers();
            loadComments();
        });

        function loadPastes() {
            fetch(`/admin/pastes?offset=${offset}`)
                .then(res => res.json())
                .then(data => {
                    const table = document.getElementById("pasteTable");
                    data.forEach(paste => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${paste.id}</td>
                            <td>${paste.user_name}</td>
                            <td>${paste.title}</td>
                            <td>${paste.content}</td>
                            <td>${paste.created_at}</td>
                            <td>${paste.pinned ? '✅' : '❌'}</td>
                            <td>
                                <button onclick="deletePaste(${paste.id})">Delete</button>
                            </td>
                        `;
                        table.appendChild(row);
                    });
                });
        }

        function loadUsers() {
            fetch(`/admin/users`)
                .then(res => res.json())
                .then(data => {
                    const table = document.getElementById("userTable");
                    data.forEach(user => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${user.id}</td>
                            <td>${user.username}</td>
                            <td>${user.email}</td>
                            <td>
                                <button onclick="deleteUser(${user.id})">Delete</button>
                            </td>
                        `;
                        table.appendChild(row);
                    });
                });
        }

        function loadComments() {
            fetch(`/admin/comments`)
                .then(res => res.json())
                .then(data => {
                    const table = document.getElementById("commentTable");
                    data.forEach(comment => {
                        const row = document.createElement("tr");
                        row.innerHTML = `
                            <td>${comment.id}</td>
                            <td>${comment.user_id || 'Anonymous'}</td>
                            <td>${comment.comment}</td>
                            <td>
                                <button onclick="deleteComment(${comment.id})">Delete</button>
                            </td>
                        `;
                        table.appendChild(row);
                    });
                });
        }

        function deleteUser(id) {
            fetch(`/admin/delete-user`, { method: 'POST', body: `userId=${id}` })
                .then(() => loadUsers());
        }

        function deleteComment(id) {
            fetch(`/admin/delete-comment`, { method: 'POST', body: `commentId=${id}` })
                .then(() => loadComments());
        }
    </script>
</body>
</html>
